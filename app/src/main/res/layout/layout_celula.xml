<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/cardview_celula"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_celula"
        android:layout_margin="5dp">

        <ImageButton
            android:layout_width="72dp"
            android:id="@+id/img_location_celula"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:onClick="onClick"
            android:background="@drawable/background_btn"
            android:src="@drawable/trash3"
            android:layout_height="64dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_location_celula"
            android:text="Localização"
            android:maxLines="2"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/img_location_celula"
            android:layout_alignTop="@id/img_location_celula"
            android:layout_marginStart="6dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude:"
            android:layout_marginTop="6dp"
            android:id="@+id/lbl_latitude"
            android:textColor="#006978"
            android:textStyle="bold"
            android:layout_below="@id/txt_location_celula"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Longitude:"
            android:textStyle="bold"
            android:textColor="#006978"
            android:id="@+id/lbl_longitute"
            android:layout_alignStart="@id/lbl_latitude"
            android:layout_below="@id/lbl_latitude"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-16.33663"
            android:id="@+id/txt_latitude"
            android:textStyle="bold"
            android:textColor="#ef5350"
            android:layout_toEndOf="@id/lbl_latitude"
            android:layout_alignTop="@id/lbl_latitude"
            android:layout_alignBottom="@id/lbl_latitude"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/lbl_longitute"
            android:layout_alignBottom="@id/lbl_longitute"
            android:textColor="#ef5350"
            android:layout_alignTop="@id/lbl_longitute"
            android:text="-48.696669"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:id="@+id/txt_longitute" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>